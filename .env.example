# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# =============================================================================
# APPLICATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://your-app.vercel.app
DEMO_MODE=false

# =============================================================================
# SECURITY
# =============================================================================
# Secret for cron job authentication (use a long random string)
CRON_SECRET=your-secure-random-string-here
# Secret for encrypting OAuth tokens (32 characters recommended)
ENCRYPTION_SECRET=your-32-character-encryption-key

# =============================================================================
# META (FACEBOOK + INSTAGRAM)
# Get credentials from: https://developers.facebook.com
# =============================================================================
META_APP_ID=
META_APP_SECRET=
META_REDIRECT_URI=https://your-app.vercel.app/api/oauth/meta/callback

# =============================================================================
# GOOGLE (YOUTUBE)
# Get credentials from: https://console.cloud.google.com
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=https://your-app.vercel.app/api/oauth/youtube/callback
# Optional: API key for public data access (without OAuth)
YOUTUBE_API_KEY=

# =============================================================================
# TIKTOK
# Get credentials from: https://developers.tiktok.com
# =============================================================================
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=https://your-app.vercel.app/api/oauth/tiktok/callback

# =============================================================================
# X (TWITTER)
# Get credentials from: https://developer.twitter.com
# =============================================================================
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=https://your-app.vercel.app/api/oauth/twitter/callback

# =============================================================================
# LINKEDIN
# Get credentials from: https://developer.linkedin.com
# =============================================================================
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=https://your-app.vercel.app/api/oauth/linkedin/callback
